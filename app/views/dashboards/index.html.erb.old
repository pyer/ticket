<% reset_cycle %>
<table class="board">
  <thead>
    <tr>
      <th>ID</th>
      <th>Subject</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
  <% @issues.each do |t| %>
    <tr class="<%= cycle("odd", "even") %>">
      <td><%= t.id %></td>
      <td><%= t.subject %></td>
      <td><%= t.description %></td>
    </tr>
  <% end %>
  </tbody>
<table>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dashboards.each do |dashboard| %>
      <tr>
        <td><%= link_to 'Show', dashboard %></td>
        <td><%= link_to 'Edit', edit_dashboard_path(dashboard) %></td>
        <td><%= link_to 'Destroy', dashboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dashboard', new_dashboard_path %>
