<% reset_cycle %>
<table class="list">
  <thead>
    <tr>
      <th>ID</th>
      <th>Description</th>
      <th>Color</th>
      <th>Status</th>
      <th>Project</th>
      <th>Created at</th>
      <th>by</th>
      <th>Updated at</th>
      <th>by</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @issues.each do |t| %>
    <tr class="<%= cycle("odd", "even") %>">
      <td><%= t.id %></td>
      <td><%= t.description %></td>
      <td><%= t.color %></td>
      <td><%= t.status %></td>
      <td><%= project_name(t.project_id) %></td>
      <td><%= t.created_on.strftime("%F %T") %></td>
      <td><%= t.created_by %></td>
      <td><%= t.updated_on.strftime("%F %T") %></td>
      <td><%= t.updated_by %></td>
      <td><%= link_to( image_tag("edit.png",      :size => "16x16"), "/issues/edit?id=#{t.id}",  :title=>"Edit" ) %></td>
      <td><%= link_to( image_tag("dashboard.png", :size => "16x16"), "/dashboard?project=#{t.project_id}", :title=>"Dashboard" ) %></td>
    </tr>
  <% end %>
  </tbody>
<table>
